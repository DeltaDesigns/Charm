<UserControl x:Class="Charm.FullEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Charm"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="GEOMETRY" x:Name="GeometryTab">
                <local:EntityView x:Name="GeometryControl" />
            </TabItem>
            <TabItem IsSelected="True" x:Name="AnimationTab" Header="ANIMATION">
                <local:TagListViewerView x:Name="AnimationControl" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>