<UserControl
    x:Class="Charm.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Loaded="OnControlLoaded"
    mc:Ignorable="d">
    <Border BorderBrush="{DynamicResource BackgroundColour10}" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="339*" />
                <ColumnDefinition Width="1577*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*" />
                <RowDefinition Height="100*" />
                <RowDefinition Height="100*" />
                <RowDefinition Height="100*" />
                <RowDefinition Height="100*" />
                <RowDefinition Height="100*" />

            </Grid.RowDefinitions>
            <!--  AB8FA380 variks  -->
            <!--  3b00ab80 atraks  -->
            <!--  4901ab80 taniks normal, 100bb780 abomination  -->
            <StackPanel
                Grid.RowSpan="6"
                Margin="0,0,0,0"
                Background="{DynamicResource BackgroundColour10}" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Height="180"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="300"
                    VerticalAlignment="Center"
                    FontSize="64"
                    Text="Dynamic" />

                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="ApiViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="API" />
                </Button>
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="NamedEntitiesBagsViewButton_OnClick"
                    FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                    FontSize="64">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="36"
                        Text="NAMED BAGS" />
                </Button>
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="AllEntitiesViewButton_OnClick"
                    FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                    FontSize="64">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="LIST" />
                </Button>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Height="180"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!-- <Button Height="75" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="AnimationsButton_OnClick" FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}" FontSize="64" Margin="20,0,20,40" Padding="20, 20, 20, 20" >
                <TextBlock Text="ANIMATIONS" VerticalAlignment="Center" FontSize="42" FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"  HorizontalAlignment="Center" Padding="0,10,0,10"/>
            </Button>
            <Button Height="75" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="CinematicsButton_OnClick" FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}" FontSize="64" Margin="20,0,20,40" Padding="20, 20, 20, 20" >
                <TextBlock Text="CINEMATICS" VerticalAlignment="Center" FontSize="42" FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"  HorizontalAlignment="Center" Padding="0,10,0,10"/>
            </Button>-->
                <TextBlock
                    Width="300"
                    VerticalAlignment="Center"
                    FontSize="64"
                    Text="Static" />
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="AllStaticsViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="40"
                        Text="LIST" />
                </Button>
                <Button
                    Width="300"
                    Height="76"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalContentAlignment="Center"
                    Click="AnimationsButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="35"
                        Text="Animations" />
                </Button>
                <Button
                    Width="300"
                    Height="76"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalContentAlignment="Center"
                    Click="AllCinematicsViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="35"
                        Text="Cinematic Anims" />
                </Button>

            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Height="180"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="300"
                    VerticalAlignment="Center"
                    FontSize="64"
                    Text="Audio" />
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="WeaponAudioViewButton_Click">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="WEAPONS" />
                </Button>
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="AllAudioViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="LIST" />
                </Button>
            </StackPanel>

            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                Height="180"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="64"
                    Text="Other" />
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="ActivitiesViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="ACTIVITIES" />
                </Button>
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="AllStringsViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="STRINGS" />
                </Button>
                <Button
                    Width="300"
                    Height="75"
                    Margin="10,0,10,0"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Click="AllTexturesViewButton_OnClick">
                    <TextBlock
                        Padding="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                        FontSize="42"
                        Text="TEXTURES" />
                </Button>
            </StackPanel>
            <TextBlock
                Grid.Row="0"
                Width="339"
                Height="53"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="45"
                Text="CHARM"
                TextAlignment="Center" />
            <TextBlock
                Grid.Row="5"
                Width="318"
                Height="54"
                Margin="0,115,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="16"
                Text="{Binding GameVersion}" />
            <Button
                Grid.Row="2"
                Width="300"
                Height="76"
                Margin="14,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="GithubButton_OnClick"
                RenderTransformOrigin="0.5,0.5">
                <TextBlock
                    Padding="0,10,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                    FontSize="42"
                    Text="GITHUB" />
            </Button>
            <Button
                Grid.Row="3"
                Width="300"
                Height="76"
                Margin="14,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="DiscordButton_OnClick"
                RenderTransformOrigin="0.5,0.5">
                <TextBlock
                    Padding="0,10,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource ResourceKey=Neue Haas Grotesk Text Pro 55 Roman}"
                    FontSize="42"
                    Text="DISCORD" />
            </Button>
            <ToggleButton
                x:Name="MainMenuImage"
                Grid.RowSpan="2"
                Margin="0,58,0,58"
                Click="MainMenuImage_OnClick"
                Style="{StaticResource EmptyToggleButton}">
                <Image x:Name="Image" />
            </ToggleButton>
        </Grid>
    </Border>
</UserControl>
